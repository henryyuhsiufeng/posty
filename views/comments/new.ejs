<% include ../partials/header %>

<div class="container" style="margin-top:10%;text-align:center;">
 <h1>Add New Comment to <%= campground.name%></h1>   
    <div class="row">
       

        <div style="width: 30%; margin:20px auto;">
            <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                <div class="form-group">
                <!--wrapping text in comment so that when access comment it will have both text and-->
                <!--author-->
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                     <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>

        
    </div>
    <a href="/campgrounds">Go Back</a>
</div>


<% include ../partials/footer %>
